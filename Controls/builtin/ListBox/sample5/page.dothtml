<h3>Match inventors and inventions</h3>

<dot:ListBox DataSource="{value: Inventors}" SelectedValue="{value: SelectedInventor}"
       DisplayMember="Name" ValueMember="Id"/>

<dot:ListBox DataSource="{value: Inventions}" SelectedValue="{value: SelectedInvention}" />

<dot:Button Text="Check Answers" Click="{command: CheckAnswer()}" />

<p>Points: {{value: Points}}</p>