<p>
  <dot:TextBox Text="{value: Text}" />
  
  <dot:ValidationMessage ValidatedValue="{value: Text}" 
                         InvalidCssClass="validation-error">
	*
  </dot:ValidationMessage>
</p>

<div ValidationMessage.InvalidCssClass="validation-error-row"
     ValidationMessage.ValidatedValue="{value: Text2}"
     style="padding: 10px; width: 200px">
  <dot:TextBox Text="{value: Text2}" />
</div>

<dot:Button Text="SEND" Click="{command: Send()}" />