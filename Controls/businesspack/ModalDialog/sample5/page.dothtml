<bp:ModalDialog IsDisplayed="{value: IsModalDisplayed}"
                HorizontalAlignment="{value: CurrentHorizontalAlignment}"
                VerticalAlignment="{value: CurrentVerticalAlignment}">
    <ContentTemplate>
        <p>Modal dialog position is set to right bottom corner.</p>
    </ContentTemplate>
</bp:ModalDialog>

<bp:Button Text="Show Modal Dialog"
           Click="{command: IsModalDisplayed = true}" />